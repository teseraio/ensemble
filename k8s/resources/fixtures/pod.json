    },
    "example2": {
        "apiVersion": "v1",
        "kind": "Pod",
        "metadata": {
            "name": "id",
            "labels": {
                "ensemble": "b"
            }
        },
        "spec": {
            "hostname": "c",
            "restartPolicy": "Never",
            "subdomain": "b",
            "containers": [
                {
                    "imagePullPolicy": "Always",
                    "name": "main-container",
                    "image": "image:latest",
                    "volumeMounts": [
                        {
                            "mountPath": "/data",
                            "name": "mount1",
                            "readOnly": false
                        }
                    ]
                }
            ],
            "volumes": [
                {
                    "name": "mount1",
                    "persistentVolumeClaim": {
                        "claimName": "c-mount1"
                    }
                }
            ]
        }    
    },
    "example3": {
        "apiVersion": "v1",
        "kind": "Pod",
        "metadata": {
            "name": "id",
            "labels": {
                "ensemble": "b"
            }
        },
        "spec": {
            "hostname": "c",
            "restartPolicy": "Never",
            "subdomain": "b",
            "containers": [
                {
                    "imagePullPolicy": "Always",
                    "name": "main-container",
                    "image": "image:latest",
                    "volumeMounts": [
                        {
                            "mountPath": "/data",
                            "name": "file-data-0",
                            "readOnly": false
                        }
                    ]
                }
            ],
            "volumes": [
                {
                    "name": "file-data-0",
                    "configMap": {
                        "name": "file-data-0"
                    }
                }
            ]
        }
    }
